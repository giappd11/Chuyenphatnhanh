@model IEnumerable<Chuyenphatnhanh.Models.BillLogTblForm>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<div id="main" style="margin-left: 0px;">
    <div class="container-fluid">


        <link href="/content/css/responsive.css?v=5.15.70.5" rel="stylesheet" type="text/css">

        <form action="/Tracking/Search" method="post">

            <style>
                #StartDeliveringTime {
                    display: -webkit-inline-box;
                }
            </style>

            <div class="container1">
                <div class="full_page">
                    <ul class="breadcrumb">
                         
                        <li>Kiểm tra đơn hàng</li>
                    </ul>



                    <div class="order">

                        <p class="search">
                            <span class="ic_search"></span>

                            <input class="input-xxlarge" data-val="true" data-val-required="Vui l&amp;#242;ng nhập m&amp;#227; phiếu gửi" id="OrderCode" name="search" placeholder="Nhập mã đơn hàng cần theo dõi và nhấn Enter" style="font-size:20px;height:24px;text-align:center;" type="text" value="">
                            <input type="submit" id="btnFindTracking" style="display: none">

                        </p>


                        <div class="row-fluid">
                            <div class="span12 ">
                                <center>
                                    <h3>Vui lòng nhập mã phiếu gửi</h3>
                                </center>
                            </div>
                        </div>

                    </div>
                </div>
                <center>
                    <h4>Mọi chi tiết vui lòng liên hệ tổng đài 18001201</h4>
                </center>
            </div>

        </form>
    </div>
</div>

<div class="progresss">
    <div class="container-fluid">
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {

            if (item.STATUS.Equals("NH"))
            {
                 
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Gửi hàng</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("CH"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Bắt đầu chuyển hàng từ @item.BRANCH_NAME_CURRENT đến @item.BRANCH_NAME_TEMP</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("NT"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng được chuyển đến kho @item.BRANCH_NAME_CURRENT</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("GH"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng bắt đầu được giao</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("TC"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng được giao thành công</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("HH"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Đơn hàng bị hủy</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("TH"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng bị hủy được chuyển từ kho @item.BRANCH_NAME_CURRENT đến @item.BRANCH_NAME_TEMP</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("TH"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng bị hủy được chuyển đến kho @item.BRANCH_NAME_CURRENT</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("GT"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng bắt đầu được giao</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            }
            if (item.STATUS.Equals("TL"))
            {
                <div class="con-details-tracking">
                    <div class="item">
                        <label>Hàng được giao thành công</label>
                        <label>
                            <span>@item.UID_CURRENT - @item.USERNAME_CURRENT&nbsp;</span>
                            <span>@item.TRANSACTION_DATE</span>
                        </label>
                    </div>
                </div>
            } 
        }

    </div>
</div>
