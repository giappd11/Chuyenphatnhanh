@model Chuyenphatnhanh.Models.SecRoleMstForm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <ul class="ul-box">
        <li class="col-md-8 col-xs-12 center">
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>SEC_ROLE_MST</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DELETE_FLAG)
                @Html.HiddenFor(model => model.MOD_USER_NAME)
                @Html.HiddenFor(model => model.REG_USER_NAME)
                @Html.TextBoxFor(model => model.MOD_DATE, "{0:dd/MM/yyyy HH:mm:ss.fff}", htmlAttributes: new { @type = "hidden" })
                @Html.TextBoxFor(model => model.REG_DATE, "{0:dd/MM/yyyy HH:mm:ss.fff}", htmlAttributes: new { @type = "hidden" })

                @Html.HiddenFor(model => model.SEC_ROLE_ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.VALUE, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.EditorFor(model => model.VALUE, new { htmlAttributes = new { @class = "col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.VALUE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ROLE_ID,  htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.DropDownList("ROLE_ID", null, htmlAttributes: new { @class = "col-xs-12 chosen-select" })
                        @Html.ValidationMessageFor(model => model.ROLE_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="frm-edit-client">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "link-back" })<input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </li>
</ul>
</div>