@model IEnumerable<Chuyenphatnhanh.Controllers.StaffSalary>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

<h2>Báo cáo</h2>

<div class="tongquan">
    <div class="form-group">
        <label class="col-md-4" >Tổng số đơn hàng: </label>
        <div class="frm-edit-client col-md-8">
            @ViewBag.tongdonhang
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4">Số đơn hàng giao thành công: </label>
        <div class="frm-edit-client col-md-8">
            @ViewBag.hangthanhcong
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4">Số đơn hàng bị hủy: </label>
        <div class="frm-edit-client col-md-8">
            @ViewBag.hangbihuy
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4">Tổng doanh thu: </label>
        <div class="frm-edit-client col-md-8">
            @ViewBag.tongtien
        </div>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.uid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.u_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.uid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.u_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
