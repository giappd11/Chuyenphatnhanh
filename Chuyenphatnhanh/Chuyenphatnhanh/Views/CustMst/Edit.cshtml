@model Chuyenphatnhanh.Models.CustMstForm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="ul-box">
        <li class="col-md-8 col-xs-12 center">
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CUST_ID)
                @Html.HiddenFor(model => model.DELETE_FLAG)
                @Html.HiddenFor(model => model.MOD_USER_NAME)
                @Html.HiddenFor(model => model.REG_USER_NAME)
                @Html.TextBoxFor(model => model.MOD_DATE, "{0:dd/MM/yyyy HH:mm:ss.fff}", htmlAttributes: new { @type = "hidden" })
                @Html.TextBoxFor(model => model.REG_DATE, "{0:dd/MM/yyyy HH:mm:ss.fff}", htmlAttributes: new { @type = "hidden" })
                <div class="form-group">
                    @Html.LabelFor(model => model.CUST_NAME, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.EditorFor(model => model.CUST_NAME, new { htmlAttributes = new { @class = "col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.CUST_NAME, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PHONE, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DEFAULT_ADDRESS, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.EditorFor(model => model.DEFAULT_ADDRESS, new { htmlAttributes = new { @class = "col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.DEFAULT_ADDRESS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DEFAULT_DISTRICT_ID,  htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.DropDownListFor(model => model.DEFAULT_DISTRICT_ID, ViewBag.DEFAULT_DISTRICT_ID as List<SelectListItem>, string.Empty, htmlAttributes: new { @class = "col-xs-12  chosen-select", @onChange = "DistrictChange(this,'DEFAULT_WARD_ID')" })
                        @Html.ValidationMessageFor(model => model.DEFAULT_DISTRICT_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DEFAULT_WARD_ID,   htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="frm-edit-client col-md-8">
                        @Html.DropDownListFor(model => model.DEFAULT_WARD_ID, ViewBag.DEFAULT_WARD_ID as List<SelectListItem>, string.Empty, htmlAttributes: new { @class = "col-xs-12 chosen-select" })
                        @Html.ValidationMessageFor(model => model.DEFAULT_WARD_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="frm-edit-client">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "link-back" })<input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </li>
</ul>
</div>